{% extends 'dashboardAdmin.html.twig' %}

{% block title %}Role index{% endblock %}

{% block body %}
    <h1>Roles </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Status</th>
                <th>RoleName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.name }}</td>
                <td>{{ role.status ? 'Yes' : 'No' }}</td>
                <td>{{ role.roleName }}</td>
                <td>
                    <a href="{{ path('app_role_show', {'id': role.id}) }}">show</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
